<Window x:Class="BlenderMarket.VentanaRegistro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro - Blender Market" 
        Height="686" Width="845"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer>

        <!-- Fondo general -->
        <Grid Background="#F2F2F2">

            <StackPanel Margin="25" VerticalAlignment="Center">

                <!-- Ícono -->
                <TextBlock Text="📝"
                           FontSize="40"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Título -->
                <TextBlock Text="CREAR CUENTA"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#F5792A"
                           Margin="0,0,0,25"
                           HorizontalAlignment="Center"/>

                <!-- Nombre Completo -->
                <TextBlock Text="Nombre Completo:"
                           Margin="0,0,0,5"
                           Foreground="#2C2C2C"/>
                <TextBox x:Name="txtNombre"
                         Height="40"
                         FontSize="14"
                         Background="White"
                         Padding="10"
                         Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email:"
                           Margin="0,0,0,5"
                           Foreground="#2C2C2C"/>
                <TextBox x:Name="txtEmail"
                         Height="40"
                         FontSize="14"
                         Background="White"
                         Padding="10"
                         Margin="0,0,0,15"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario:"
                           Margin="0,0,0,5"
                           Foreground="#2C2C2C"/>
                <TextBox x:Name="txtUsername"
                         Height="40"
                         FontSize="14"
                         Background="White"
                         Padding="10"
                         Margin="0,0,0,15"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña:"
                           Margin="0,0,0,5"
                           Foreground="#2C2C2C"/>
                <PasswordBox x:Name="txtPassword"
                             Height="40"
                             FontSize="14"
                             Background="White"
                             Padding="10"
                             Margin="0,0,0,15"/>

                <!-- Confirmar contraseña -->
                <TextBlock Text="Confirmar Contraseña:"
                           Margin="0,0,0,5"
                           Foreground="#2C2C2C"/>
                <PasswordBox x:Name="txtConfirmPassword"
                             Height="40"
                             FontSize="14"
                             Background="White"
                             Padding="10"
                             Margin="0,0,0,25"/>

                <!-- Error -->
                <Border x:Name="borderError"
                        Background="#FAD4A3"
                        Padding="10"
                        Margin="0,0,0,20"
                        CornerRadius="5"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtMensajeError"
                               Foreground="#C0392B"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- BOTÓN REGISTRAR (naranja Blender) -->
                <Button x:Name="btnRegistrar"
                        Content="REGISTRARME"
                        Height="40"
                        FontSize="16"
                        Background="#F5792A"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnRegistrar_Click"/>

                <!-- BOTÓN CANCELAR (gris Blender) -->
                <Button x:Name="btnCancelar"
                        Content="CANCELAR"
                        Height="40"
                        FontSize="16"
                        Background="#7A7A7A"
                        Foreground="White"
                        Margin="0,10,0,0"
                        Click="BtnCancelar_Click"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
