<Window x:Class="BlenderMarket.VentanaPago"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proceso de Pago - Blender Market" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <!-- Fondo normal (sin imagen porque Pago NO debe llevar fondo) -->
        <Grid Background="#F2F2F2">

            <StackPanel Margin="25">

                <!-- Ícono -->
                <TextBlock Text="💬" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Título -->
                <TextBlock Text="PROCESO DE PAGO" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#F5792A"
                           Margin="0,0,0,25"
                           HorizontalAlignment="Center"/>

                <!-- FORMULARIO -->
                <Border Background="#FFFFFF"
                        Padding="20"
                        CornerRadius="10"
                        BorderBrush="#D96514"
                        BorderThickness="2"
                        Margin="0,0,0,20">

                    <StackPanel>

                        <TextBlock Text="Enviar mensaje" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2C2C2C"
                                   Margin="0,0,0,15"/>

                        <!-- Nombre -->
                        <TextBlock Text="Nombre Completo" 
                                   FontSize="14"
                                   Foreground="#2C2C2C"/>
                        <TextBox x:Name="txtNombre" 
                                 Height="40" 
                                 Padding="10"
                                 FontSize="14"
                                 Margin="0,0,0,15"/>

                        <!-- Correo -->
                        <TextBlock Text="Correo" 
                                   FontSize="14"
                                   Foreground="#2C2C2C"/>
                        <TextBox x:Name="txtCorreo" 
                                 Height="40" 
                                 Padding="10"
                                 FontSize="14"
                                 Margin="0,0,0,15"/>

                        <!-- Teléfono -->
                        <TextBlock Text="Teléfono" 
                                   FontSize="14"
                                   Foreground="#2C2C2C"/>
                        <TextBox x:Name="txtTelefono" 
                                 Height="40" 
                                 Padding="10"
                                 FontSize="14"
                                 Margin="0,0,0,15"/>

                    </StackPanel>
                </Border>

                <!-- ERROR -->
                <Border x:Name="borderError" 
                        Background="#ffeaa7" 
                        Padding="10" 
                        Margin="0,0,0,20"
                        CornerRadius="5"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtMensajeError" 
                               Foreground="#d63031" 
                               TextWrapping="Wrap"/>
                </Border>

                <!-- BOTÓN WHATSAPP BLENDER -->
                <Button x:Name="btnEnviarWhatsApp" 
                        Content="Enviar por WhatsApp" 
                        Height="50" 
                        FontSize="16"
                        Background="#F5792A"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnEnviarWhatsApp_Click"/>

                <!-- BOTÓN CANCELAR (gris oscuro Blender) -->
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Height="40" 
                        FontSize="16"
                        Background="#7A7A7A"
                        Foreground="White"
                        Margin="0,10,0,0"
                        Click="BtnCancelar_Click"/>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>
