<UserControl x:Class="BlenderMarket.PaginaInicio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- El control ahora se adapta al tamaño del Frame -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <!-- FONDO SOLO PARA ESTA VENTANA -->
        <Grid.Background>
            <ImageBrush ImageSource="/images/fondo.png"
                        Stretch="UniformToFill"
                        Opacity="0.75"/>
        </Grid.Background>

        <!-- LOGO ARRIBA A LA DERECHA -->
        <Image Source="/images/logo.png"
               Width="160"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,20,20,0"
               Opacity="0.95"/>

        <!-- CONTENIDO ORIGINAL, NO MODIFICADO -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="558">

            <TextBlock FontSize="80"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="BLENDER MARKET"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C2C2C"
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- BOTÓN INICIAR SESIÓN (color Blender) -->
            <Button x:Name="btnIniciarSesion"
                    Content="🔑 INICIAR SESIÓN"
                    Height="50"
                    FontSize="16"
                    Background="#F5792A"
                    Foreground="White"
                    Margin="0,0,0,15"
                    Click="BtnIniciarSesion_Click"/>

            <!-- BOTÓN REGISTRARSE (gris oscuro) -->
            <Button x:Name="btnRegistrarse"
                    Content="📝 REGISTRARSE"
                    Height="50"
                    FontSize="16"
                    Background="#2C2C2C"
                    Foreground="White"
                    Margin="0,0,0,15"
                    Click="BtnRegistrarse_Click"/>

            <!-- BOTÓN INVITADO (gris claro) -->
            <Button x:Name="btnInvitado"
                    Content="👤 CONTINUAR COMO INVITADO"
                    Height="50"
                    FontSize="16"
                    Background="#7A7A7A"
                    Foreground="White"
                    Click="BtnInvitado_Click"/>

            <TextBlock Text="Como invitado solo podrás ver el catálogo"
                       FontSize="11"
                       Foreground="#3A3A3A"/>
        </StackPanel>

    </Grid>
</UserControl>
