<Window x:Class="BlenderMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blender Market" Height="672" Width="1080"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER (gris oscuro Blender) -->
        <Border Grid.Row="0" Background="#2C2C2C" Padding="15">
            <DockPanel>

                <TextBlock Text="🎨 BLENDER MARKET" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#F5792A"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="txtEstadoSesion" 
                           HorizontalAlignment="Right"
                           FontSize="14"
                           Foreground="#F2F2F2"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Loaded="MainFrame_Loaded"/>

        <!-- FOOTER (gris claro Blender) -->
        <Border Grid.Row="2" Background="#4A4A4A" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Botones Blender: naranja = acción, gris = navegación -->
                <Button x:Name="btnInicio" 
                        Content="🏠 Inicio" 
                        Width="120"
                        Margin="5"
                        Background="#7A7A7A"
                        Foreground="White"
                        Click="BtnInicio_Click"/>

                <Button x:Name="btnCatalogo" 
                        Content="🛍️ Catálogo" 
                        Width="120"
                        Margin="5"
                        Background="#7A7A7A"
                        Foreground="White"
                        Click="BtnCatalogo_Click"/>

                <Button x:Name="btnCarrito" 
                        Content="🛒 Carrito (0)" 
                        Width="120"
                        Margin="5"
                        Background="#F5792A"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnCarrito_Click"/>

                <Button x:Name="btnSubirModelo" 
                        Content="⬆️ Subir Modelo" 
                        Width="140"
                        Margin="5"
                        Background="#D96514"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnSubirModelo_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="btnCerrarSesion" 
                        Content="🚪 Cerrar Sesión" 
                        Width="140"
                        Margin="5"
                        Background="#7A7A7A"
                        Foreground="White"
                        Click="BtnCerrarSesion_Click"
                        Visibility="Collapsed"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
