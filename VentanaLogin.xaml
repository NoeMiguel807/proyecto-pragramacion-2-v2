<Window x:Class="BlenderMarket.VentanaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - Blender Market" 
        Height="466" Width="729"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>

        <!-- 🔶 FONDO (con transparencia) -->
        <Grid.Background>
            <ImageBrush ImageSource="/images/fondo.png"
                        Stretch="UniformToFill"
                        Opacity="0.75"/>
        </Grid.Background>

        <!-- 🔶 LOGO ARRIBA A LA DERECHA -->
        <Image Source="/images/logo.png"
               Width="140"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,15,15,0"
               Opacity="0.95"/>

        <!-- 🔶 CONTENIDO ORIGINAL, NO MODIFICADO -->
        <StackPanel Margin="30" VerticalAlignment="Center">

            <TextBlock Text="🔑" 
                       FontSize="40" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="INICIAR SESIÓN" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#F5792A"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <!-- Usuario -->
            <TextBlock Text="Usuario:" 
                       Margin="0,0,0,5" 
                       Foreground="White"/>
            <TextBox x:Name="txtUsername" 
                     Height="40" 
                     FontSize="14"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,15"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña:" 
                       Margin="0,0,0,5" 
                       Foreground="White"/>
            <PasswordBox x:Name="txtPassword" 
                         Height="40" 
                         FontSize="14"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,25"/>

            <!-- Error -->
            <Border x:Name="borderError" 
                    Background="#ffeaa7" 
                    Padding="10" 
                    Margin="0,0,0,20"
                    CornerRadius="5"
                    Visibility="Collapsed">
                <TextBlock x:Name="txtMensajeError" 
                           Foreground="#d63031" 
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Botones -->
            <Button x:Name="btnLogin" 
                    Content="INGRESAR" 
                    Height="40" 
                    FontSize="16"
                    Background="#F5792A"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnLogin_Click"/>

            <Button x:Name="btnCancelar" 
                    Content="CANCELAR" 
                    Height="40" 
                    FontSize="16"
                    Background="#7A7A7A"
                    Foreground="White"
                    Margin="0,10,0,0"
                    Click="BtnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>
